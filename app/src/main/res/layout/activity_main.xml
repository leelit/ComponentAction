<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.componentaction.MainActivity">

    <Button
        android:id="@+id/btn_service_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service" />

    <Button
        android:id="@+id/btn_send_local_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="同进程广播接受者" />

    <Button
        android:id="@+id/btn_send_local_broadcast_newthread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="同进程子线程广播接受者" />

    <Button
        android:id="@+id/btn_send_remote_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跨进程广播接受者" />

</LinearLayout>
