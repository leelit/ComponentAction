<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.componentaction.CtrLocalServiceActivity">

    <Button
        android:id="@+id/start_normal_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启MyService" />

    <Button
        android:id="@+id/stop_normal_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止MyService" />

    <Button
        android:id="@+id/bind_normal_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定MyService" />

    <Button
        android:id="@+id/unbind_normal_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消绑定MyService" />

    <Button
        android:id="@+id/binder_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过binder调用MyService方法" />

    <Button
        android:id="@+id/service_callback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="service回调" />

    <Button
        android:id="@+id/service_callback_newthread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="service子线程回调" />

    <Button
        android:visibility="gone"
        android:id="@+id/btn_jump_ctr_remote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳到远程进程Activity" />



</LinearLayout>
